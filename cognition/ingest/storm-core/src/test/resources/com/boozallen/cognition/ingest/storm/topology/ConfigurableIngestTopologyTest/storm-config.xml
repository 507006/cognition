<storm-config>
  <topology.workers>2</topology.workers>
  <topology.message.timeout.secs>300</topology.message.timeout.secs>
  <topology.max.spout.pending>10</topology.max.spout.pending>
  <topology.worker.childopts>-Xmx4G</topology.worker.childopts>
  <topology.debug>true</topology.debug>
  <topology.stats.sample.rate>2.0</topology.stats.sample.rate>
  <topology.executor.receive.buffer.size>16</topology.executor.receive.buffer.size>
  <storm.zookeeper.servers>host0:2081,host1:2081</storm.zookeeper.servers>
  <storm.local.dir>/storm-local</storm.local.dir>
</storm-config>